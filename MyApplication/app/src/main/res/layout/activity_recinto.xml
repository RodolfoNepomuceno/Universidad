<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Recinto"
    android:id="@+id/layout_recinto"
    android:clickable="true">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/seleccion"
        android:id="@+id/textView_seleccion"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="@dimen/titulos"
        android:contentDescription="@string/seleccion" />

    <ImageButton
        android:layout_width="@dimen/boton_recinto_ancho"
        android:layout_height="@dimen/boton_recinto_alto"
        android:id="@+id/imageButton_r1"
        android:background="@drawable/recinto1"
        android:layout_below="@+id/textView_seleccion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:contentDescription="@string/recinto1" />

    <ImageButton
        android:layout_width="@dimen/boton_recinto_ancho"
        android:layout_height="@dimen/boton_recinto_alto"
        android:id="@+id/imageButton_r2"
        android:background="@drawable/recinto2"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/recinto2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/recinto1"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/imageButton_r1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/recinto1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/recinto2"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/imageButton_r2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/recinto2" />
</RelativeLayout>
